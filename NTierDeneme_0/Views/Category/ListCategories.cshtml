@model CategoryVM
@using Project.ENTITIES.Models

@{
    ViewBag.Title = "ListCategories";
}

<div class="jumbotron">
    Yeni Kategori eklemek için @Html.ActionLink("tıklayınız.","AddCategory")
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori İsmi</th>
            <th>Açıklama</th>
            <th colspan="2" style="padding-left:200px">İşlemler</th>
        </tr>        
    </thead>

    <tbody>
        @foreach (Category item in Model.Categories)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@Html.ActionLink("Güncelle","UpdateCategory","Category", new {id = item.ID}, new {@class= "btn btn-warning"})</td>
                <td>@Html.ActionLink("Sil","DeleteCategory","Category", new {id = item.ID}, new {@class= "btn btn-danger"})</td>
            </tr>
        }
    </tbody>
</table>

